 <div class="banner banner-margin" style="background: linear-gradient(-150deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 0%), url(<%= image_path 'back.jpg' %>);">
  <div class="container text-center">
    <div class="box">
      <div class="img-cocktail-box">
      <%= cl_image_tag @cocktail.photo, height: 200, width: 400, crop: :fill %>
      </div>
      <div class="header-title text-center">
        <h3><strong><%= @cocktail.name %></strong></h3>
      </div>
      <div class="container-description text-center">
        <% @cocktail.doses.each do |dose|%>
          <div class="cocktail-dose">
            <li style="list-style: none">
              <p><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure ?"} do %>
                <i class="fa fa-times" aria-hidden="true"></i>
                <% end %>
              </p>
            </li>
          </div>
        <% end %>
      </div>
    </div>
    <div class="box">
      <div class="header-title text-center">
        <h3><strong>Custom <%= @cocktail.name %></strong></h3>
      </div>
      <div id="form" class="text-center">
        <%= render 'shared/flashes' %>
        <%= render 'shared/form_add', cocktail: @cocktail, new_dose: @new_dose %>
      </div>
    </div>
    <div class="button-back-padded"><%= link_to "Back", cocktails_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>

