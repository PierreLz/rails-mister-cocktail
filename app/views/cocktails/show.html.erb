<div class="container text-center">
  <div class="header-title text-center">
    <h3><strong><%= @cocktail.name %></strong></h3>
  </div>
    <div class="container-description text-center">
      <% @cocktail.doses.each do |dose|%>
      <div class="cocktail-description">
        <li style="list-style: none"><%= dose.description %> <%= dose.ingredient.name %></li>
      <% end %>
      </div>
    </div>
    <h4 class="text-center"><strong>Custom <%= @cocktail.name %></strong></h4>
    <div id="form" class="text-center">
      <%= render 'form_add' %>
      <div class="button-back-padded"><%= link_to "Back", cocktails_path, class: "btn btn-default"%></div>
    </div>
</div>
