<div class="container text-center">
  <div class="header-title text-center">
    <strong><h3>Custom the cocktail</h3></strong>
  </div>
  <div class="container text-center">
    <div id="form">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :ingredient_id, collection: @ingredients %>
      <%= f.input :description %>
      <%= f.submit "Add it !" %>
      <% end %>
    </div>
  </div>
</div>
